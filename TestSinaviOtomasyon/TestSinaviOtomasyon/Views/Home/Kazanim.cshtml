@using TestSinaviOtomasyon.Service
@using TestSinaviOtomasyon.Common.DataTransferObjects;
@{
    ViewBag.Title = "Kullanici";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link href="~/Content/ProjectContent/Kazanim.css" rel="stylesheet" />
</head>
<body>

    <div class="container">
        <div class="listWrap">
            <h3>Kazanım Listesi</h3>
            <ul class="list custab">
                <li>
                    <span>ID</span>
                    <span>KAZANIM TÜRÜ</span>
                    <span>KAZANIM TÜRÜ İD</span>
                    <span>KAZANIM</span>
                    <span class="text-center">Actions</span>
                    <span></span>
                </li>
                @{
                    ServiceCode servis = new ServiceCode();
                    foreach (var item in servis.KazanimListele())
                    {
                <li id="@item.kazanim_id">
                    <span>@item.kazanim_id</span>
                    <span>@item.kazanim_turu</span>
                    <span>@item.kazanim_turu_id</span>
                    <span>@item.kazanim_adi</span>
                    <span class="text-center">
                        <button type="submit" class="btn btn-info btn-xs" onclick="kazanimguncelleme(@item.kazanim_id)"><span class="glyphicon glyphicon-edit"> Güncelle</span></button>
                        <button type="submit" class="btn btn-danger btn-xs" onclick="kazanimsil(@item.kazanim_id)"><span class="glyphicon glyphicon-remove"> Sil</span></button>
                    </span>
                    <span></span>
                </li>
                    }
                }
            </ul>
            <button style="margin-left:88.7%" type="button" class="btn btn-primary btn-xs pull-right" onclick="kazanimeklemeekrani()"><b>+</b> Kazanım Ekle</button>
        </div>
    </div>

    <div id="formkazanim" class="container">
        <div class="row">
            <br /><br />
            <h3 id="h3ekle" style="margin-left:46%;">Kazanım Ekle</h3>
            <h3 id="h3duzenle" style="margin-left:43.5%;">Kazanım Güncelle</h3>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="kazanimform">
                    <div class="form-group">
                        <label for="k_t_adi">Kazanım Türü</label>
                        <select style="height:100%!important" class="form-control" id="kazanim_turu" name="kazanim_turu" required>
                            <option selected value="Seçiniz">Seçiniz</option>
                            <option value="Bölüm">Bölüm</option>
                            <option value="Ders">Ders</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="k_turu_id">Kazanim Türü İd</label>
                        <input type="text" class="form-control" id="kazanim_turu_id" name="Kazanim_turu_id" placeholder="Kazanım Türü İd" required />
                    </div>
                    <div class="form-group">
                        <label for="k_adi">Adı</label>
                        <input type="text" class="form-control" id="kazanim_adi" name="kazanim_adi" placeholder="Kazanım Adı" required />
                    </div>
                    <div class="form-check">
                        <button type="submit" class="btn btn-info btn-xs" style="width:100%;height:30px" id="guncellebtn" onclick="kazanimduzenle()"><span class="glyphicon glyphicon-edit"> Güncelle</span></button>
                    </div>
                    <div class="form-check">
                        <button type="submit" class="btn btn-primary" style="width:100%" id="eklebtn" onclick="kazanimekle()"><b>+</b> Ekle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/ProjectScripts/Kazanim.js"></script>
    <script src="http://code.jquery.com/color/jquery.color-2.1.2.min.js" integrity="sha256-H28SdxWrZ387Ldn0qogCzFiUDDxfPiNIyJX7BECQkDE=" crossorigin="anonymous"></script>
</body>
</html>