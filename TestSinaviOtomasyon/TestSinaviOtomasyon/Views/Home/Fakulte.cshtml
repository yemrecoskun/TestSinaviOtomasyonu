@using TestSinaviOtomasyon.Service
@using TestSinaviOtomasyon.Common.DataTransferObjects;
@{
    ViewBag.Title = "Kullanici";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link href="~/Content/ProjectContent/Fakulte.css" rel="stylesheet" />
</head>
<body>

    <div class="container">
        <div class="listWrap">
            <h3>Fakülte Listesi</h3>
            <ul class="list custab">
                <li>
                    <span>ID</span>
                    <span>FAKÜLTE</span>
                    <span class="text-center">Actions</span>
                    <span></span>
                </li>
                @{
                    ServiceCode servis = new ServiceCode();
                    foreach (var item in servis.FakulteListele())
                    {
                        <li id="@item.fakulte_id">
                            <span>@item.fakulte_id</span>
                            <span>@item.fakulte_ad</span>
                            <span class="text-center">
                                <button type="submit" class="btn btn-info btn-xs" onclick="fakulteguncelleme(@item.fakulte_id)"><span class="glyphicon glyphicon-edit"> Güncelle</span></button>
                                <button type="submit" class="btn btn-danger btn-xs" onclick="fakultesil(@item.fakulte_id)"><span class="glyphicon glyphicon-remove"> Sil</span></button>
                            </span>
                            <span></span>
                        </li>
                    }
                }
            </ul>
            <button style="margin-left:89.5%" type="button" class="btn btn-primary btn-xs pull-right" onclick="fakulteeklemeekrani()"><b>+</b> Fakülte Ekle</button>
        </div>
    </div>

    <div id="formfakulte" class="container">
        <div class="row">
            <br /><br />
            <h3 id="h3ekle" style="margin-left:46%;">Fakulte Ekle</h3>
            <h3 id="h3duzenle" style="margin-left:43.5%;">Fakulte Güncelle</h3>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="fakulteform">
                    <div class="form-group">
                        <label for="f_adi">Adı</label>
                        <input type="text" class="form-control" id="fakulte_adi" name="fakulte_adi" placeholder="Fakülte Adı" required />
                    </div>
                    <div class="form-check">
                        <button type="submit" class="btn btn-info btn-xs" style="width:100%;height:30px" id="guncellebtn" onclick="fakulteduzenle()"><span class="glyphicon glyphicon-edit"> Güncelle</span></button>
                    </div>
                    <div class="form-check">
                        <button type="submit" class="btn btn-primary" style="width:100%" id="eklebtn" onclick="fakulteekle()"><b>+</b> Ekle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/ProjectScripts/Fakulte.js"></script>
    <script src="http://code.jquery.com/color/jquery.color-2.1.2.min.js" integrity="sha256-H28SdxWrZ387Ldn0qogCzFiUDDxfPiNIyJX7BECQkDE=" crossorigin="anonymous"></script>
</body>
</html>